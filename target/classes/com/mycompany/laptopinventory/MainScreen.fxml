            <Button onAction="#handleEmployees" style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 16px;" text="Employees" />
            <Button onAction="#handleReports" style="-fx-text-fill: white; -fx-background-color: transparent; -fx-font-size: 16px;" text="Report" />
